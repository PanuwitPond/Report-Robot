# ============================================
# Docker Environment Template
# ============================================
# Copy this file to .env and fill in actual values
# All variables are required unless marked [OPTIONAL]
# 
# For Docker setup: Use this file for all configuration
# Database credentials MUST match your actual databases
#

# ============================================
# FRONTEND CONFIGURATION
# ============================================
FRONTEND_PORT=80

# ============================================
# BACKEND CONFIGURATION
# ============================================
BACKEND_PORT=3001
NODE_ENV=production
CORS_ORIGIN=http://localhost

# FFmpeg Configuration [OPTIONAL]
FFMPEG_PATH=/usr/bin/ffmpeg
FFMPEG_TIMEOUT=15000

# ============================================
# PRIMARY DATABASE (know_db)
# ============================================
# Location: 192.168.100.125:5432
DATABASE_HOST=192.168.100.125
DATABASE_PORT=5432
DATABASE_USERNAME=aiintern
DATABASE_PASSWORD=your_password_here
DATABASE_NAME=know_db

# ============================================
# MROI DATABASE (ivs_service)
# ============================================
# Location: 192.168.100.83:5432
# Contains: IV cameras, ROIs, schedules, snapshots
MROI_DB_HOST=192.168.100.83
MROI_DB_PORT=5432
MROI_DB_USERNAME=aiintern
MROI_DB_PASSWORD=your_password_here
MROI_DB_NAME=ivs_service

# ============================================
# MIOC LEGACY DATABASE (metlink_app_db)
# ============================================
# Location: 35.186.159.153:5432 (GCP - PUBLIC)
# ⚠️ WARNING: Consider enabling SSL in production
MIOC_DB_HOST=35.186.159.153
MIOC_DB_PORT=5432
MIOC_DB_USERNAME=postgres
MIOC_DB_PASSWORD=your_password_here
MIOC_DB_NAME=metlink_app_db

# ============================================
# ROBOT DATABASE (data_robot)
# ============================================
# Location: 34.142.222.114:5432 (GCP - PUBLIC with SSL)
# SSL: Enabled with rejectUnauthorized: false
ROBOT_DB_HOST=34.142.222.114
ROBOT_DB_PORT=5432
ROBOT_DB_USER=postgres
ROBOT_DB_PASSWORD=your_password_here
ROBOT_DB_NAME=data_robot

# ============================================
# WORKFORCE DATABASE (ms_workforce)
# ============================================
# Location: 34.87.166.125:5432 (GCP - PUBLIC with SSL)
# SSL: Enabled with rejectUnauthorized: false
WF_DB_HOST=34.87.166.125
WF_DB_PORT=5432
WF_DB_USER=postgres
WF_DB_PASSWORD=your_password_here
WF_DB_NAME=ms_workforce

# ============================================
# MINIO STORAGE - REPORT BUCKET
# ============================================
# Primary storage for reports and documents
MINIO_ENDPOINT=storage.metthier.com
MINIO_PORT=443
MINIO_USE_SSL=true
MINIO_ACCESS_KEY=your_access_key_here
MINIO_SECRET_KEY=your_secret_key_here
MINIO_BUCKET=reports

# ============================================
# MINIO STORAGE - ROBOT BUCKET
# ============================================
# Secondary storage for robot-related files
MINIO_ROBOT_ENDPOINT=storage.metthier.com
MINIO_ROBOT_PORT=443
MINIO_ROBOT_USE_SSL=true
MINIO_ROBOT_ACCESS_KEY=your_access_key_here
MINIO_ROBOT_SECRET_KEY=your_secret_key_here
MINIO_ROBOT_BUCKET=robot

# ============================================
# KEYCLOAK AUTHENTICATION
# ============================================
# Location: http://keycloak:8080 (Docker service)
# Realm: robot-report
# For first time setup:
#   1. Start Docker: docker-compose up
#   2. Access Keycloak: http://localhost:8080
#   3. Login with KEYCLOAK_ADMIN_USERNAME / PASSWORD
#   4. Create realm and client as configured below
KEYCLOAK_PORT=8080
KEYCLOAK_URL=http://keycloak:8080
KEYCLOAK_REALM=robot-report
KEYCLOAK_CLIENT_ID=robot-report-client
KEYCLOAK_CLIENT_SECRET=your_client_secret_here
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=admin_password_here

# ============================================
# JWT SECURITY
# ============================================
# JWT_SECRET: Use a strong random string
#   Generate: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_here_use_strong_random_value
JWT_EXPIRATION=86400
USER_SECRET_KEY=your_user_secret_key_here

# ============================================
# JASPER REPORTS CONFIGURATION
# ============================================
# Location: 192.168.100.135:8080
JASPER_USERNAME=jasper_user
JASPER_PASSWORD=jasper_password_here

# ============================================
# TRUE ALARM WEB CONFIGURATION
# ============================================
# Integration with true alarm web system
TRUE_ALARM_WEB_USERNAME=alarm_user
TRUE_ALARM_WEB_PASSWORD=alarm_password_here
